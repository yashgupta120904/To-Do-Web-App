# MongoDB Configuration
MONGODB_URI=mongodb+srv://username:password@cluster.mongodb.net/board-todo-app
# For MongoDB Atlas, get your connection string from: Atlas Dashboard > Connect > Connect your application

# Server Configuration
PORT=5000

# Firebase Admin SDK
# Place your Firebase service account JSON file in the backend directory
# Download from: Firebase Console > Project Settings > Service Accounts > Generate New Private Key
FIREBASE_SERVICE_ACCOUNT_PATH=./firebase-service-account.json

# CORS Configuration
FRONTEND_URL=http://localhost:5173
